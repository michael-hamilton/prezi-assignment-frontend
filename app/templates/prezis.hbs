<div class="col-md-6">

	<div class="input-group">
  		{{input type="text" class="form-control" value=title action="search" placeholder="Enter Prezi Name Here"}}
  		<span class="input-group-btn">
	       	<button class="btn btn-default" {{action "search"}} type="button">Search</button>
	   	</span>
	</div>

  	
  	{{# each model as |prezi| }}	
	  <div class="row prezi">
	  	<div class="col-xs-8">
	  		<p><b>{{prezi.title}}</b></p>
	  		<p>{{prezi.createdAt}}</p>
	  		<p>Created By: <a href="{{prezi.creator.profileUrl}}">{{prezi.creator.name}}</a></p>
  		</div>
  		<div class="col-xs-4">
	  		<img src="{{prezi.thumbnail}}" class="pull-right" height="80">
	  	</div>
	  </div>
	{{/each}}

</div>